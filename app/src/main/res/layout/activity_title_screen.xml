<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".TitleScreen">

    <EditText
        android:id="@+id/caution"
        android:layout_width="337dp"
        android:layout_height="68dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="472dp"
        android:layout_marginEnd="37dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="PROCEED WITH CAUTION" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="302dp"
        android:layout_height="66dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="87dp"
        android:text="ENTER?"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caution" />

    <EditText
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="341dp"
        android:ems="10"
        android:inputType="text"
        android:text="NULL ADVENTURE?"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/caution"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/titleImageView"
        android:layout_width="259dp"
        android:layout_height="320dp"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/caution"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/magicportal" />
</androidx.constraintlayout.widget.ConstraintLayout>